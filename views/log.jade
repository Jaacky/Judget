extends layout

block content
	script(src="/javascripts/log.js")

	.container-fluid.content
		h1 Log!
		.row
			.col-sm-4
				table.table-striped.table-hover.table-bordered.logTable#usefulPurchases
					colgroup
						col(width='50%')
						col(width='50%')
					tr.no-hover
						th Purchase
						th Price
			.col-sm-4
				table.table-striped.table-hover.table-bordered.logTable#extraPurchases
					colgroup
						col(width='50%')
						col(width='50%')
					tr.no-hover
						th Purchase
						th Price
			.col-sm-4
				table.table-striped.table-hover.table-bordered.logTable#investmentPurchases
					colgroup
						col(width='50%')
						col(width='50%')
					tr.no-hover
						th Purchase
						th Price

	script(type='text/javascript').
		purchases = !{purchases}
		parsed = parsePurchases(purchases)
		console.log(parsed)
		addToTable('usefulPurchases', parsed.useful)
		addToTable('extraPurchases', parsed.extra)
		addToTable('investmentPurchases', parsed.investment)

