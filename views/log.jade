extends layout

block content
	script(src="/javascripts/log.js")

	.container-fluid.content
		h1 Log!
		table.table-striped.table-hover.table-bordered#allPurchases
			colgroup
				col(width='50%')
				col(width='50%')
			tr.no-hover
				th Purchase
				th Price

	script(type='text/javascript').
		purchases = !{purchases}

		for (var i=0; i<purchases.length; i++) {
			$('#allPurchases').append(formatPurchaseRow(purchases[i]));
		}